@model Core.Entity.VideoMaterial
    <div class="video-container">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="@Model.Name" />
                    <span asp-validation-for="Name" class="text-danger">Name is required</span>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="Resolution" class="control-label">Max Resolution: </label>
                    <br />
                    <select asp-for="Resolution">
                        <option value="7680p (8K)">7680p (8K)</option>
                        <option value="2160p (4K)">2160p (4K)</option>
                        <option value="1440p">1440p</option>
                        <option value="1080p">1080p</option>
                        <option value="720p">720p</option>
                        <option value="480p">480p</option>
                        <option value="360p">360p</option>
                        <option value="240p">240p</option>
                    </select>
                </div>
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    <label asp-for="Source" class="control-label"></label>
                    <input asp-for="Source" class="form-control" placeholder="@Model.Source" />
                    <span asp-validation-for="Source" class="text-danger">Youtube video link required</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input onclick="removeElement(this);" class="btn btn-danger" type="button" value="Remove" />
            </div>
        </div>
    <hr />
    <br />
</div>
