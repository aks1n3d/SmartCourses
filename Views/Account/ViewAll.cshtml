@model AccountsModel

<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>Our Users</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="job_listing_area plus_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="job_filter white-bg">
                    <div class="form_inner white-bg">
                        <h3>Filter</h3>
                        <form asp-action="ViewAll" method="post" id="sortFrom">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="single_field">
                                        <input asp-for="Search" type="text" placeholder="Search keyword">
                                    </div>
                                </div>
                            </div>

                            <div class="reset_btn">
                                <button type="submit" color: white" class="btn btn-success w-100">Apply</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <div class="col-lg-12">
                <div class="recent_joblist_wrap">
                    <div class="recent_joblist white-bg " style="margin-top:20px;">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h4>Users</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="job_lists m-0">
                    <div class="row">
                        @{
                            foreach (var user in @Model.Data)
                            {


                                <div class="col-lg-12 col-md-12">
                                    <div class="single_jobs white-bg d-flex justify-content-between">
                                        <div class="jobs_left d-flex align-items-center">
                                            <div class="thumb">
                                                @{
                                                    if (user.Profile.AvatarName is null)
                                                    {
                                                        <img src="~/img/defaultCourse.png" style="width:100%; height:100%" alt="">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/uploads/@user.Profile.AvatarName" style="width:100%; height:100%" alt="">
                                                    }
                                                }
                                            </div>
                                            <div class="jobs_conetent">
                                                <a asp-controller="Account" asp-action="Profile" asp-route-id="@user.Id"><h4>@user.Profile.FirstName @user.Profile.SecondName</h4></a>
                                                <div class="links_locat d-flex align-items-center">
                                                    <div class="location">
                                                        <p>@user.Profile.Role</p>
                                                    </div>
                                                    <div class="location">
                                                        <p>@user.Profile.Age y. o.</p>
                                                    </div>
                                                    <div class="location">
                                                        <p>Registered: @user.Profile.RegistrationDate.ToShortDateString()</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>