@model Core.Models.RegisterViewModel;

    <div class="bradcam_area bradcam_bg_1">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text">
                        <h3>Registration</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="job_details_area">
        <div class="container">
            <div class="row" style="background-color: white; border-radius: 15px; padding: 50px;">
                <div class="col-md-6 offset-md-3">
                    <form asp-action="Register" autocomplete="off" method="post" id="form">
                        <div class="text-danger"></div>
                        <div class="form-group">
                            <label  style="font-size: 30px" asp-for="Login" class="control-label"></label>
                            <input  style="font-size: 30px" asp-for="Login" class="form-control" />
                            <span asp-validation-for="Login" class="text-danger">Login must have up to 30 character</span>
                        </div>
                        <div class="form-group">
                            <label  style="font-size: 30px" asp-for="Password" class="control-label"></label>
                            <input  style="font-size: 30px" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger">Password must have at least 6 character, up to 30</span>
                        </div>
                        <div class="form-group">
                            <label  style="font-size: 30px" asp-for="PasswordConfirm" class="control-label"></label>
                            <input  style="font-size: 30px" asp-for="PasswordConfirm" class="form-control" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input style="height:50px;" type="submit" value="Submit" class="btn btn-primary w-100" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                    <a style="height:50px; padding-top:12px;" asp-action="Login" class="btn btn-secondary w-100">Login</a>
                            </div>
                        </div>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
